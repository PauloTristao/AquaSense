@model ConjuntoHabitacionalViewModelConsulta
@{
    Layout = "_LayoutSideBar";
}


<style>
    .modal-backdrop {
        z-index: 0;
    }

</style>
<head>
    <link rel="stylesheet" href="~/css/conjuntoHabitacional.css" />
    <script src="~/js/site.js"></script>
</head>
<body>
    <div class="container">
        <fieldset class="mt-3">
            <legend style="width: 28%">Conjunto Habitacional</legend>
            <input type="hidden" id="IdConjuntoHabitacional" name="IdConjuntoHabitacional" value="@Model.ConjuntoHabitacional.Id" />
            <input type="hidden" id="IdUsuario" name="IdUsuario" value="@Model.ConjuntoHabitacional.IdUsuarioAdm" />
            <div class="row">
                <div class="col-md-3">
                    <label for="ConjuntoHabitacional.Nome" class="control-label">Nome:</label>
                    <input asp-for="ConjuntoHabitacional.Nome" class="form-control" readonly />
                    <span asp-validation-for="ConjuntoHabitacional.Nome" class="text-danger"></span>
                    <br />
                </div>
                <div class="col-md-3">
                    <label for="ConjuntoHabitacional.Endereco" class="control-label">Endereço:</label>
                    <input asp-for="ConjuntoHabitacional.Endereco" class="form-control" readonly />
                    <span asp-validation-for="ConjuntoHabitacional.Endereco" class="text-danger"></span>
                    <br />
                </div>
                <div class="col-md-2">
                    <label for="ConjuntoHabitacional.Cnpj" class="control-label">CNPJ:</label>
                    <input asp-for="ConjuntoHabitacional.Cnpj" class="form-control" readonly />
                    <span asp-validation-for="ConjuntoHabitacional.Cnpj" class="text-danger"></span>
                    <br />
                </div>
                <div class="col-md-1 text-right" style="margin-top: 30px">
                    <a href="#" class="btn btn-dark" data-toggle="modal" data-target="#exampleModal">Editar</a>
                </div>
            </div>
        </fieldset>
        <fieldset class="mt-3">
            <legend style="width: 18%">Apartamentos</legend>
            <div class="row ml-3">
                <div class="mt-auto text-right">
                    <a href="#" class="btn btn-dark" data-toggle="modal" data-target="#NovoApartamento">+</a>
                </div>
            </div>
            <section>
                <div class="row mt-3">
                    @foreach (ApartamentoViewModel apartamento in Model.Apartamentos)
                    {
                        <div class="col-md-3 mb-5">
                            <div class="card"  style="width: 15rem;">
                                <div class="card-body" onclick="ConsultaCarteira('/Carteira/CarregaCarteira', @apartamento.Id)">
                                    <h5 class="card-title">@apartamento.NumeroApartamento</h5>
                                    <p>Quantidade: sei lá porra</p>
                                    <p>Total: sei lá porra</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </section>
        </fieldset>
    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Altere o conjunto Habitacional:</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="col-md-3">
                    <label for="ConjuntoHabitacional.Nome" class="control-label">Nome:</label>
                    <input asp-for="ConjuntoHabitacional.Nome" class="form-control"  />
                    <span asp-validation-for="ConjuntoHabitacional.Nome" class="text-danger"></span>
                    <br />
                </div>
                <div class="col-md-3">
                    <label for="ConjuntoHabitacional.Endereco" class="control-label">Endereço:</label>
                    <input asp-for="ConjuntoHabitacional.Endereco" class="form-control"  />
                    <span asp-validation-for="ConjuntoHabitacional.Endereco" class="text-danger"></span>
                    <br />
                </div>
                <div class="col-md-2">
                    <label for="ConjuntoHabitacional.Cnpj" class="control-label">CNPJ:</label>
                    <input asp-for="ConjuntoHabitacional.Cnpj" class="form-control"  />
                    <span asp-validation-for="ConjuntoHabitacional.Cnpj" class="text-danger"></span>
                    <br />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="SalvaNomePortifolio('/Portifolio/Save')">Salvar</button>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="NovoApartamento" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Nome da nova carteira:</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="col-md-6">
                        <label for="nomeNovoApartamento" class="control-label">Nome:</label>
                        <input type="text" id="nomeNovoApartamento" class="form-control">
                        <span id="campoPersonalizado-error" class="text-danger"></span>
                        <br />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="CriaNovoApartamento('/Carteira/Save')">Salvar</button>
                </div>
            </div>
        </div>
    </div>
</body>

<script>
    $('#NovoApartamento').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget) // Button that triggered the modal
        var recipient = button.data('whatever') // Extract info from data-* attributes
        // If necessary, you could initiate an AJAX request here (and then do the updating in a callback).
        // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
        var modal = $(this)
        // modal.find('.modal-title').text('New message to ' + recipient)
        modal.find('.modal-body input').val(recipient)
    })

  

</script>


